<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="CarDetailBinding">

        <variable
            name="car"
            type="by.chekun.repository.database.entity.advertisement.view.AdvertisementResp" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            style="@style/layout_width_and_height_match">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/detailCarImage"
                    android:layout_width="match_parent"
                    android:layout_height="191dp"
                    android:contentDescription="car picture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bmw_m3_e46" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtCarCardDescription"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:text="@{car.title}"
                        android:textColor="@color/colorBlack"
                        android:textSize="17sp"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/txtCarId"
                        android:layout_width="61dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:text="@{car.body}"
                        android:textColor="@color/colorBlack"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txtCarUpdateDate"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:text="@{car.getStringType}"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:text="@{car.getStringStatus}"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtUserDescription"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="descr"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </LinearLayout>
</layout>